<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.heltech.design.LoginActivity"
    android:background="@drawable/back">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="600dp">

        <ImageButton
            android:text="Настройки"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:elevation="0dp"
            app:srcCompat="@drawable/backbtn"
            android:scaleType="centerInside"
            android:visibility="visible"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/settings_btn"
            android:tint="@color/colorAccent" />
        <Button
            android:text="Информация"
            android:layout_width="wrap_content"
            android:id="@+id/infoBtn"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:elevation="0dp"
            android:textSize="11sp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/loginBtn"
            android:layout_marginBottom="100dp" />

        <Button
            android:text="Забыли пароль"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/forgotPassBtn"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:elevation="0dp"
            android:textSize="11sp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/loginBtn"
            android:layout_marginBottom="100dp" />

        <Button
            android:text="Войти"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:id="@+id/loginBtn"
            android:background="@drawable/login_btn"
            android:layout_above="@+id/infoBtn"
            android:layout_alignStart="@+id/passField"
            android:layout_marginBottom="15dp" />



        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:background="@drawable/edit_text"
            android:id="@+id/loginField"
            android:hint="Имя пользователя"
            android:textColorLink="@android:color/white"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:paddingLeft="15dp"
            android:typeface="normal"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingRight="15dp"
            android:layout_above="@+id/passField"
            android:layout_centerHorizontal="true"
            android:focusedByDefault="true"
            android:textSize="14sp" />
        <EditText
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/edit_text"
            android:id="@+id/passField"
            android:hint="•••••••"
            android:textColorLink="@android:color/white"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:paddingLeft="15dp"
            android:typeface="normal"
            android:layout_marginBottom="14dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingRight="15dp"
            android:layout_above="@+id/loginBtn"
            android:layout_alignStart="@+id/loginField"
            android:focusedByDefault="false"
            android:textSize="14sp" />

        <TextView
            android:text="Авторизуйтесь в cистеме Inmart TV для просмотра каналов"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/loginField"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal" />

        <TextView
            android:text=" Добро пожаловать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />
    </RelativeLayout>

</RelativeLayout>
